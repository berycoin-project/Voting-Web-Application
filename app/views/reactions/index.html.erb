<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Reactions</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Name</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @reactions.each do |reaction| %>
                <tr>
                            <td><%= reaction.name %></td>
                            <td><%= link_to 'Show', reaction %></td>
                  <td><%= link_to 'Edit', edit_reaction_path(reaction) %></td>
                  <td><%= link_to 'Destroy', reaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Reaction', new_reaction_path %>
        </div>
      </div>
    </div>
  </div>
</div>