<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Statuses</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Name</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @statuses.each do |status| %>
                <tr>
                            <td><%= status.name %></td>
                            <td><%= link_to 'Show', status %></td>
                  <td><%= link_to 'Edit', edit_status_path(status) %></td>
                  <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Status', new_status_path %>
        </div>
      </div>
    </div>
  </div>
</div>