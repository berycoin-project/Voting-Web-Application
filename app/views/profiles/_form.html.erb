    <%= f.label :last_name %>
    <%= f.text_field :last_name , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth %>
    <%= f.datetime_select :date_of_birth , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :gender %>
    <%= f.text_field :gender , class: 'form-control'%>
