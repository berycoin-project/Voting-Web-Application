<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Votes</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Name</th>
                          <th>Vote type</th>
                          <th>Vote weight</th>
                          <th>Vote message</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @votes.each do |vote| %>
                <tr>
                            <td><%= vote.name %></td>
                            <td><%= vote.vote_type %></td>
                            <td><%= vote.vote_weight %></td>
                            <td><%= vote.vote_message %></td>
                            <td><%= link_to 'Show', vote %></td>
                  <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
                  <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Vote', new_vote_path %>
        </div>
      </div>
    </div>
  </div>
</div>